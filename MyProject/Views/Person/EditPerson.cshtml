@model IqbalElectronics.DB.Models.Person
@{
    ViewBag.Title = "EditPerson";
}
<!DOCTYPE html>

<html>
<meta name="viewport" content="width=device-width" />

<title>AddProduct</title>
<style>
    .fields {
        width: 350px;
        padding: 8px;
        border-radius: 5px;
        margin-top: 20px;
        font-family: Cambria, Cochin, Georgia, Times, Times New Roman, serif;
        margin-left: 15%;
    }

    .texts {
        font-family: Cambria, Cochin, Georgia, Times, Times New Roman, serif;
        margin-left: 15%;
        color: black;
    }

    #addButton {
        float: right;
        margin-right: 41%;
        margin-top: 20px;
        padding: 10px;
        font-family: Cambria, Cochin, Georgia, Times, Times New Roman, serif;
        font-weight: bold;
        width: 150px;
        font-size: large;
    }
</style>

</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <h1 style="text-align:center;font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif;">Edit @ViewBag.CustomerOrStaff Information</h1>
    @if (ViewBag.CustomerOrStaff == "Staff")
    {
        <form action="/Person/AddStaff" method="post" enctype="multipart/form-data">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-5" style="margin-left: 5%; margin-top: 10px; height: 75vh; border-left: 1px solid #e0e0e0; border-right: 1px solid #e0e0e0">
                        <h3 class="texts">Name:</h3>
                        <input class=" fields" type="text" name="name" placeholder="Person Name" value="@Model.Name" required /><br>
                        <h3 class="texts">Address:</h3>
                        <input class=" fields" type="text" name="address" placeholder="Address" value="@Model.Address" required /><br>
                        <h3 class="texts">Phone:</h3>
                        <input class=" fields" type="number" name="phone" placeholder="Phone" value="@Model.PhoneNumber" disabled required /><br>
                        <h3 class="texts">Image:</h3>
                        <input class="fields" type="file" accept="image/png, image/jpg, image/jpeg" name="image" /><br>
                        <br>
                    </div>
                    <div class="col-lg-6" style="margin-top: 10px;height:75vh;">
                        <h3 class="texts">CNIC:</h3>
                        <input class=" fields" type="number" name="cnic" placeholder="CNIC" value="@Model.Cnic" readonly required /><br>
                        <h3 class="texts">Created At:</h3>
                        <input class=" fields" name="createdAT" placeholder="createdat" value=@ViewBag.Now readonly /><br>
                        <h3 class="texts">Salary:</h3>
                        <input class=" fields" type="number" name="salary" placeholder="Salary" value="@Model.Salary" required /><br>

                        <input class="btn btn-success" style="margin-top:50px" id="addButton" type="submit" name="btnSubmit" value="Edit @ViewBag.CustomerOrStaff" required />
                        <br><br>

                    </div>
                </div>
            </div>
        </form>

    }
    else
    {
        <form action="/Person/AddCustomer" method="post" enctype="multipart/form-data">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-5" style="margin-left: 5%; margin-top: 10px; height: 75vh; border-left: 1px solid #e0e0e0; border-right: 1px solid #e0e0e0">
                        <h3 class="texts">Name:</h3>
                        <input class=" fields" type="text" name="name" placeholder="Product Name" value="@Model.Name" required /><br>
                        <h3 class="texts">Address:</h3>
                        <input class=" fields" type="text" name="address" placeholder="Address" value="@Model.Address" required /><br>
                        <h3 class="texts">Phone:</h3>
                        <input class=" fields" type="number" name="phone" placeholder="Phone" value="@Model.PhoneNumber" disabled required /><br>
                        <br>
                    </div>
                    <div class="col-lg-6" style="margin-top: 10px;height:75vh;">
                        <h3 class="texts">Image:</h3>
                        <input class="fields" type="file" accept="image/png, image/jpg, image/jpeg" name="image" /><br>

                        <h3 class="texts">CNIC:</h3>
                        <input class=" fields" type="number" name="cnic" placeholder="CNIC" value="@Model.Cnic"readonly required /><br>
                        <h3 class="texts">Created At:</h3>
                        <input class=" fields" name="createdAT" placeholder="createdat" value=@ViewBag.Now readonly /><br>
                        <input class="btn btn-success" style="margin-top:50px" id="addButton" type="submit" name="btnSubmit" value="Edit @ViewBag.CustomerOrStaff" required />
                        <br><br>
                    </div>
                </div>
            </div>
        </form>
    }

</body>
</html>